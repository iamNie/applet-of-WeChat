.subTab {
  position: absolute;
  width: 135px;
  top: 39px;
  right: 36%;
  z-index: 999;
  display: none;
  height: 50px;
  background-color: #c83127;
  border-radius: 2.5px;
  border: 1px solid #fff;
}

.subTab li {
  font-size: 14px;
  line-height: 30px;
  color: #fff;
  height: 50%;
  display: block;
  text-align: left;
  padding-left: 10px;
}

.slidown {
  display: block;
}

.slidup {
  display: none;
}

.centerLine {
  width: 70%;
  height: 1px !important;
  background-color: #fff;
  margin: 0 auto;
}
