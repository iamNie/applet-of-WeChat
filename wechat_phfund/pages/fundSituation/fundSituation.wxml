<view style="width:100%;height:100%;">
  <view class="lineBlock"></view>
  <view class="lineBlock"></view>
  <view style="background-color:#fff">
    <view class="fundMess">
    <view>
      <icon class="icon"></icon>
      <text class="font-17 text-more font-weight">基金信息</text>
    </view>
  </view>
  <view class="lineBottom"></view>
  <view class="second">
    <view class='tips'>
      <text class="font-15 width-30 color-3" style="margin-left:10pt;">产品名称</text>
      <text class="font-15 color-9 width-70 marginRight text-right">{{fundMessage.fundName}}</text>
    </view>
    <view class="lineBottom"></view>
  </view>
  <view class="second">
    <view class='tips'>
      <text class="font-15 width-30" style="margin-left:10pt;">基金代码</text>
      <text class="font-15 color-9 width-70 marginRight text-right">{{fundMessage.fundCode}}</text>
    </view>
    <view class="lineBottom"></view>
  </view>
  <view class="second">
    <view class='tips'>
      <text class="font-15 width-30" style="margin-left:10pt;">基金类型</text>
      <text class="font-15 color-9 width-70 marginRight text-right">{{fundMessage.fundType}}</text>
    </view>
    <view class="lineBottom"></view>
  </view>
  <view class="second">
    <view class='tips'>
      <text class="font-15 width-30" style="margin-left:10pt;">单位面值</text>
      <text class="font-15 color-9 width-70 marginRight text-right">{{fundMessage.faceValue}}元</text>
    </view>
    <view class="lineBottom"></view>
  </view>
  <view class="second" wx:if="{{lowren>0}}">
    <view class='tips'>
      <text class="font-15 width-30" style="margin-left:10pt;">{{tipsName}}</text>
      <text class="font-15 color-9 width-70 marginRight text-right">{{lowren}}元</text>
    </view>
    <view class="lineBottom"></view>
  </view>
  <view class="second">
    <view class='tips'>
      <text class="font-15 width-30" style="margin-left:10pt;">成立日期</text>
      <text class="font-15 color-9 width-70 marginRight text-right">{{fundMessage.estabDate}}</text>
    </view>
    <view class="lineBottom"></view>
  </view>
  <view class="second">
    <view class='tips'>
      <text class="font-15 width-30" style="margin-left:10pt;">基金管理人</text>
      <text class="font-15 color-9 width-70 marginRight text-right">{{fundMessage.fundManager}}</text>
    </view>
    <view class="lineBottom"></view>
  </view>
  <view class="second">
    <view class='tips'>
      <text class="font-15 width-30" style="margin-left:10pt;">基金托管人</text>
      <text class="font-15 color-9 width-70 marginRight text-right">{{fundMessage.fundTrustee}}</text>
    </view>
    <view class="lineBottom"></view>
  </view>
  <view class="second">
    <view class='tips'>
      <text class="font-15 width-30" style="margin-left:10pt;">注册登记人</text>
      <text class="font-15 color-9 width-70 marginRight text-right">{{fundMessage.registPerson}}</text>
    </view>
    <view class="lineBottom"></view>
  </view>
  </view>
</view>
<view>
  <loading wx:if="{{showLoading}}">加载中</loading>
</view>