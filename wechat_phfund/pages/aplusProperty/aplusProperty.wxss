/* pages/myAsset/myAsset.wxss */

.totalMoney {
  width: 100%;
  height: 113.5px;
  background-color: #c83127;
  text-align: center;
  color: #fff;
}

.downImg {
  width: 15px;
  height: 11px;
}

.total {
  padding-top: 10px;
}

.money {
  padding-top: 5px;
}

.center {
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
  height: 70px;
  background-color: #fff;
}

.wallet {
  width: 100%;
  height: 70px;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
}

.yield {
  width: 121px;
  height: 16.5px;
  background-color: #c42526;
  color: #fff;
  font-size: 12px;
  border-radius: 10px;
  text-align: center;
  margin-left: 5px;
  line-height: 16.5px;
}

.walletYield {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 18px;
  line-height: 18px;
}

.btn {
  width: 90%;
  height: 42.5px;
  margin: 20px auto;
}

.swiper-tab {
  width: 100%;
  height: 75.5px;
  border-bottom: 1px solid #f5f5f5;
  font-size: 15px;
  display: flex;
  align-items: center;
  flex-direction: row;
  text-align: center;
  background-color: #fff;
}

.swiper-tab-list {
  font-size: 10pt;
  display: inline-block;
  width: 50%;
  height: 75.5px;
}

.on {
  color: #c42526;
  border-bottom: 2px solid #c83127;
  border-width: 40%;
}

.swiper-box {
  height: 100%;
  width: 100%;
  overflow-y: scroll;
  background-color: #fff;
}

.dividend-50 {
  height: 50%;
  text-align: center;
  width: 100%;
}

.margin-5 {
  display: flex;
  align-items: center;
  height: 50px;
  flex-direction: row;
  background-color: #fff;
}

.icon {
  width: 3px;
  height: 15px;
  background-color: #c83127;
  margin-left: 10px;
  margin-right: 10px;
}

/**
切换美元和人民币
*/

.subTab {
  position: absolute;
  width: 132px;
  top: 39px;
  right: 36%;
  z-index: 999;
  display: none;
  height: 50px;
  background-color: #c83127;
  border-radius: 2.5px;
  border: 1px solid #fff;
}

.subTab li {
  font-size: 14px;
  line-height: 30px;
  color: #fff;
  height: 50%;
  display: block;
  text-align: left;
  padding-left: 10px;
}

.slidown {
  display: block;
}

.slidup {
  display: none;
}

.centerLine {
  width: 70%;
  height: 1px !important;
  background-color: #fff;
  margin: 0 auto;
}

.moreFund {
  width: 100%;
  height: 42px;
  text-align: center;
  background-color: #fff;
  line-height: 42px;
}

.ads {
  width: 100%;
  height: 127px;
}
