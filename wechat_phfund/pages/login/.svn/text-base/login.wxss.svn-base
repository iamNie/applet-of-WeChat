page {
  background-color: #fff;
}

.image {
  width: 10px;
  height: 15px;
  margin-right: 10px;
}

.image2 {
  width: 20px;
  height: 12px;
  margin-right: 10px;
}

.line {
  height: 1px;
  background-color: #c8c8c8;
  width: 100%;
}

.icon {
  width: 20px;
  height: 16px;
  margin-left: 15px;
}

.icon1 {
  width: 12pt;
  height: 12pt;
  float: right;
  margin-right: 10px;
  margin-top: 8px;
}

.itemView {
  height: 45px;
  background-color: #fff;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.forgetPwd {
  height: 45px;
  /* background-color:#fff; */
  line-height: 45px;
  text-align: right;
  margin-right: 10px;
}

/*下拉选择登录类型*/

.subTab {
  position: absolute;
  width: 100%;
  top: 62px;
  right: 0;
  z-index: 999;
}

.subTab li {
  font-size: 14px;
  line-height: 34px;
  color: #575757;
  height: 40px;
  display: block;
  padding-left: 8px;
  background-color: #f5f5f5;
  text-align: left;
}

.slidown {
  display: block;
}

.slidup {
  display: none;
}

.active {
  color: #ff8331 !important;
}

.login {
  width: 90%;
  height: 45px;
  background-color: #c83217;
  color: #fff;
  margin-top: 100px;
  text-align: center;
}

.dx_login {
  width: 90%;
  height: 45px;
  background-color: #fff;
  border: 1px solid #c83217;
  color: #c83217;
  text-align: center;
  position: absolute;
  bottom: 20px;
  left: 5%;
}

.tip {
  width: 90%;
  height: 2px;
  background-color: #dcdcdc;
  position: absolute;
  bottom: 90px;
  left: 5%;
}

.tips {
  width: 60%;
  background-color: #fff;
  color: #c83217;
  text-align: center;
  position: absolute;
  bottom: -5px;
  left: 20%;
}
