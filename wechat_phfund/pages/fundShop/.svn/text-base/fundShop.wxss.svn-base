.swiper-tab {
  width: 100%;
  height: 50px;
  border-bottom: 1px solid #f5f5f5;
  font-size: 15px;
  display: flex;
  align-items: center;
  flex-direction: row;
  /* line-height: 30px; */
  text-align: center;
    background-color: #fff;

}

.swiper-tab-list {
  font-size: 10pt;
  display: inline-block;
  width: 16.66%;
  color: #777;
  height: 45px;
  line-height: 45px;
}

.on {
  color: #c83127;
  border-bottom: 3px solid #c83127;
  border-width: 40%;
}

.swiper-box {
  /* display: block; */
  height: 100%;
  width: 100%;
  overflow-y: scroll;
   background-color: #fff;
}

/* .swiper-box view {
  text-align: left;
} */

/**基金展示样式*/

.fundContent {
  width: 100%;
}

.fundTtile {
  width: 100%;
  height: 31px;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: left;
}

.fundDetail {
  width: 100%;
  height: 53px;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: left;
}

.fundDetail text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.right-view {
  /* width: 100%; *//* height: 53px; */
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
}

.image {
  width: 10px;
  height: 8px;
  margin-left: 4pt;
}

.subTab {
  position: absolute;
  width: 25%;
  top: 39px;
  right: 0;
  z-index: 999;
  display: none;
}

.subTab li {
  font-size: 14px;
  line-height: 34px;
  color: #575757;
  height: 40px;
  display: block;
  padding-left: 8px;
  background-color: #fff;
  text-align: center;
}

/*筛选项容器布局*/

.pick-container {
  /* width: 100%; */
  height: 300rpx;
  background-color: lightgoldenrodyellow;
  position: absolute;
  z-index: 50;
  /* top: -228rpx; */
}

